.player{
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    top: -10%;
    position: relative;
    width: 160rpx;
    align-items: center;
}
.tx{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    margin: 20rpx;
}
.name{
    background-color: rgb(188, 143, 143, 1);
    font-size: large;
    color: white;
    font-weight:bold;
    font-family:"宋体"
}