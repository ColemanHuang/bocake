.container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100vh;
}
.bk1{
    position:absolute;
    width: 100%;
    height: 100%;
}
.first{
    display: flex;
    flex-direction: row;
}
.second{
    display: flex;
    flex-direction: column;
    /* top: 1%; */
    position: relative;
    justify-content: space-around;

}
.bar1{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}
.bar2{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    top: 10%;
    position: relative;
}
.rotate{
    width: 140rpx;
    height: 140rpx;
    /* position: relative; */
}
.fight{
    width: 50%;
    border-radius: 5%;
    border: 2px solid black;
    background-color: rgb(188, 143, 143, 0.9);
    color: blanchedalmond;
    font-family:"楷体";
    font-size:xx-large;
    font-weight:bold
}
